using System;
using System.Collections.Generic;
using System.Linq;
using System.Runtime.InteropServices;
using System.Text;
using System.Threading.Tasks;

namespace _0909
{
    internal class Auto
    {
        string gyarto;
        string tipus;
        int ev;
        double uaszint;
        string uatipus;
        int seb;

        public Auto (string gyarto,string tipus,int ev,double uaszint,string uatipus,int seb)
        {
            Gyarto = gyarto;
            Tipus = tipus;
            Ev = ev;
            Uaszint = uaszint;
            Uatipus = uatipus;
            Seb = seb;
            
        }
        public string Gyarto 
        {
            get => gyarto;
            set
            {
                if (value==null)
                {
                    throw new Exception("A gyarto nem lehet null");
                }
                else
                {
                    gyarto = value;
                }
            }
            //set => gyarto = value == null ? value : throw new Exception("A gyarto nem lehet null");
        }

        public string Tipus
        {
            get => tipus;
            set
            {
                if (value == null)
                {
                    throw new Exception("");
                }
                else
                {
                    tipus = value.ToUpper();
                }
            }
        }

        public int Ev
        {
            get => ev;
            set
            {
                if (value<1886)
                {
                    throw new Exception();
                }
                else
                {
                    ev= value;
                }
            }
        }
        public double Uaszint
        {
            get => uaszint;
            set
            {
                if (value>=0 && value<=50)
                {
                    uaszint = value;
                }
                else
                {
                    throw new Exception();
                }
            }
        }

        public string Uatipus
        {
            get => uatipus;
            set
            {
                if (value != "benzin" && value != "dízel" && value != "elektromos")
                {
                    throw new Exception("m");
                }
                else
                {
                    uatipus = value;
                }

            }
        }

        public int Seb
        {
            get => seb;
            set 
            {
                if (value < 0 || value > 5)
                {
                    throw new Exception();
                }else if (Uaszint == 0)
                {
                    throw new Exception("Nem lehet sebességben váltani, ha nincs üzemanyag.");
                }
                else
                {
                    seb = value;
                }
            }
        }

        public void Kiir()
        {
            Console.WriteLine($"Gyarto: {Gyarto} - tipus: {Tipus} - gyartasi ev: {Ev} - uzemanyag szint: {Uaszint} - uzemanyag tipus: {Uatipus} - sebesseg: {Seb}");
        }
    }
}







